<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin"  group="search" method="upgrade">
	<name>plg_search_joodb</name>
	<author>Dirk Hoeschen - computer * daten * netze : feenders</author>
	<creationDate>Jan 2023</creationDate>
	<copyright>Copyright 2023 computer * daten * netze : feenders. All rights reserved.</copyright>
	<license>GNU/GPL v3</license>
	<authorEmail>hoeschen@feenders.de</authorEmail>
	<authorUrl>http://joodb.feenders.de</authorUrl>
	<version>4.0</version>
	<description>PLG_SEARCH_JOODB_XML_DESCRIPTION</description>
	<files>
		<filename plugin="joodb">joodb.php</filename>
	</files>
    <languages folder="/language/">
		<language tag="en-GB">en-GB.plg_search_joodb.ini</language>
		<language tag="en-GB">en-GB.plg_search_joodb.sys.ini</language>
		<language tag="de-DE">de-DE.plg_search_joodb.ini</language>
		<language tag="de-DE">de-DE.plg_search_joodb.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
						name="search_limit"
						type="number"
						label="PLG_SEARCH_JOODB_FIELD_SEARCHLIMIT_LABEL"
						description="PLG_SEARCH_JOODB_FIELD_SEARCHLIMIT_DESC"
						default="50"
						filter="integer"
						size="5"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
